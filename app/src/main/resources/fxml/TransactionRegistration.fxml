<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="659.0" prefWidth="550.0" spacing="20.0" styleClass="modal-container" stylesheets="@../css/transaction-registration.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.finncker.desktop.controllers.TransactionRegistrationController">
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   
   <fx:define>
      <ToggleGroup fx:id="typeGroup" />
   </fx:define>
   
   <!-- Header -->
   <HBox alignment="CENTER_LEFT" spacing="10.0">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
      <VBox spacing="5.0" HBox.hgrow="ALWAYS">
         <Text styleClass="modal-title" text="Nova Transação" />
         <Text styleClass="modal-subtitle" text="Adicione uma nova receita ou despesa ao seu histórico financeiro" wrappingWidth="434.4000244140625" />
      </VBox>
      <Button fx:id="closeButton" mnemonicParsing="false" onAction="#handleClose" styleClass="close-button" text="✕" />
   </HBox>
   
   <!-- Valor e Data -->
   <HBox spacing="15.0">
      <VBox spacing="8.0" HBox.hgrow="ALWAYS">
         <Label styleClass="field-label" text="Valor *" />
         <TextField fx:id="valueField" prefWidth="387.0" promptText="0,00" styleClass="custom-text-field" />
      </VBox>
      <VBox spacing="8.0" HBox.hgrow="ALWAYS">
         <Label styleClass="field-label" text="Data *" />
         <DatePicker fx:id="datePicker" prefWidth="387.0" promptText="DD/MM/AAAA" styleClass="custom-date-picker" />
      </VBox>
   </HBox>
   
   <!-- Tipo -->
   <VBox spacing="8.0">
      <Label styleClass="field-label" text="Tipo *" />
      <HBox spacing="0" styleClass="toggle-group-container">
         <ToggleButton fx:id="incomeToggle" maxWidth="Infinity" mnemonicParsing="false" styleClass="toggle-left" text="Receita" HBox.hgrow="ALWAYS">
            <toggleGroup>
               <ToggleGroup fx:id="typeGroup" />
            </toggleGroup></ToggleButton>
         <ToggleButton fx:id="expenseToggle" maxWidth="Infinity" mnemonicParsing="false" selected="true" styleClass="toggle-right" text="Despesa" toggleGroup="$typeGroup" HBox.hgrow="ALWAYS" />
      </HBox>
   </VBox>
   
   <!-- Conta -->
   <VBox spacing="8.0">
      <Label styleClass="field-label" text="Conta *" />
      <ComboBox fx:id="accountComboBox" prefWidth="790.0" promptText="Selecione uma conta" styleClass="custom-combo-box" />
   </VBox>
   
   <!-- Descrição -->
   <VBox spacing="8.0">
      <Label styleClass="field-label" text="Descrição *" />
      <TextField fx:id="descriptionField" prefWidth="790.0" promptText="Ex: Supermercado, Salário..." styleClass="custom-text-field" />
   </VBox>
   
   <!-- Categoria -->
   <VBox spacing="8.0">
      <Label styleClass="field-label" text="Categoria *" />
      <ComboBox fx:id="categoryComboBox" prefWidth="790.0" promptText="Selecione uma categoria" styleClass="custom-combo-box" />
   </VBox>
   
   
   <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSave" prefHeight="47.0" prefWidth="567.0" styleClass="save-button" text="Salvar Transação">
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin>
   </Button>
</VBox>
