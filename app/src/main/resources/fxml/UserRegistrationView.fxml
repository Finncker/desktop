<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #F9FAFB;" stylesheets="@../style/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <center>
    <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="350.0" spacing="10.0">
      <children>
        <ImageView fitHeight="150.0" fitWidth="300.0" preserveRatio="true">
          <image>
            <Image url="@../images/finncker-logo.png"/>
          </image>
        </ImageView>
        <Label style="-fx-font-family: 'Inter'; -fx-font-size: 16px; -fx-font-weight: bold;" text="Bem vindo ao Finncker" textFill="#000000cc"/>
        <Label style="-fx-font-family: 'Inter'; -fx-font-size: 16px;" text="Configure sua conta para começar a gerenciar suas finanças" textAlignment="CENTER" textFill="#000000cc" wrapText="true"/>
        <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #FFFEFE; -fx-background-radius: 10; -fx-border-color: black; -fx-border-radius: 10; -fx-border-width: 0.2;">
          <children>
            <VBox alignment="CENTER_LEFT" spacing="10.0">
              <children>
                <Label style="-fx-font-family: 'Inter'; -fx-font-size: 16px; -fx-font-weight: bold;" text="Configuração Inicial" textFill="#000000cc"/>
                <Label style="-fx-font-family: 'Inter'; -fx-font-size: 16px;" text="Insira as seguintes informações para iniciar sua experiência" textFill="#000000cc" wrapText="true"/>
                <Label style="-fx-font-family: 'Inter'; -fx-font-size: 16px; -fx-font-weight: bold;" text="Nome Completo" textFill="#000000cc"/>
                <TextField promptText="Digite seu nome completo" style="-fx-font-family: 'Inter'; -fx-font-size: 16px; -fx-background-color: #EEEEEE;"/>
                <Label style="-fx-font-family: 'Inter'; -fx-font-size: 16px; -fx-font-weight: bold;" text="Email" textFill="#000000cc"/>
                <TextField promptText="seu@email.com" style="-fx-font-family: 'Inter'; -fx-font-size: 16px; -fx-background-color: #EEEEEE;"/>
              </children>
              <VBox.margin>
                <Insets/>
              </VBox.margin>
            </VBox>
            <Button maxWidth="Infinity" style="-fx-font-family: 'Inter'; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: black;" text="Começar" textFill="white"/>
          </children>
          <effect>
            <DropShadow height="10.0" radius="4.5" width="10.0">
              <color>
                <Color opacity="0.2"/>
              </color>
            </DropShadow>
          </effect>
          <VBox.margin>
            <Insets bottom="5.0" top="5.0"/>
          </VBox.margin>
          <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
          </padding>
        </VBox>
        <Label style="-fx-font-family: 'Inter'; -fx-font-size: 16px;" text="Seus dados serão armazenados localmente e de forma segura" textAlignment="CENTER" textFill="#000000cc" wrapText="true"/>
      </children>
    </VBox>
  </center>
</BorderPane>
