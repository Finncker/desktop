<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>

<BorderPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1000.0" style="-fx-background-color: #F9FAFB;" stylesheets="@../style/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <center>
    <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="400.0" spacing="10.0">
      <children>
        <ImageView fitHeight="150.0" fitWidth="300.0" preserveRatio="true">
          <image>
            <Image url="@../images/finncker-logo.png"/>
          </image>
        </ImageView>
        <Label style="-fx-font-family: 'Inter'; -fx-font-size: 16px; -fx-font-weight: bold;" text="Bem vindo ao Finncker"/>
        <Label style="-fx-font-family: 'Inter'; -fx-font-size: 16px;" text="Configure sua conta para começar a gerenciar suas finanças" textAlignment="CENTER" wrapText="true"/>
        <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #FFFEFE; -fx-background-radius: 10; -fx-border-color: black; -fx-border-radius: 10; -fx-border-width: 0.2;">
          <children>
            <VBox alignment="CENTER_LEFT" spacing="10.0">
              <children>
                <Label style="-fx-font-family: 'Inter'; -fx-font-size: 16px; -fx-font-weight: bold;" text="Configuração Inicial"/>
                <Label style="-fx-font-family: 'Inter'; -fx-font-size: 16px;" text="Insira as seguintes informações para personalizar sua experiência" wrapText="true"/>
                <Label style="-fx-font-family: 'Inter'; -fx-font-size: 16px; -fx-font-weight: bold;" text="Nome Completo"/>
                <TextField promptText="Digite seu nome completo" style="-fx-background-color: #EEEEEE; -fx-background-radius: 10; -fx-font-family: 'Inter'; -fx-font-size: 16px;">
                  <padding>
                    <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                  </padding>
                </TextField>
                <Label style="-fx-font-family: 'Inter'; -fx-font-size: 16px; -fx-font-weight: bold;" text="Email"/>
                <TextField promptText="seu@email.com" style="-fx-background-color: #EEEEEE; -fx-background-radius: 10; -fx-font-family: 'Inter'; -fx-font-size: 16px;">
                  <padding>
                    <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                  </padding>
                </TextField>
              </children>
              <VBox.margin>
                <Insets/>
              </VBox.margin>
            </VBox>
            <Button maxWidth="Infinity" style="-fx-background-color: black; -fx-background-radius: 10; -fx-font-family: 'Inter'; -fx-font-size: 16px; -fx-font-weight: bold;" text="Começar" textFill="white">
              <padding>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
              </padding>
            </Button>
          </children>
          <effect>
            <DropShadow height="10.0" radius="4.5" width="10.0">
              <color>
                <Color opacity="0.2"/>
              </color>
            </DropShadow>
          </effect>
          <VBox.margin>
            <Insets bottom="5.0" top="5.0"/>
          </VBox.margin>
          <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
          </padding>
        </VBox>
        <Label style="-fx-font-family: 'Inter'; -fx-font-size: 16px;" text="Seus dados são armazenados localmente e de forma segura" textAlignment="CENTER" wrapText="true"/>
      </children>
    </VBox>
  </center>
</BorderPane>
